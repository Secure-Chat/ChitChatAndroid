<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/room_item_height"
    android:orientation="vertical"
    android:padding="@dimen/padding_regular">

    <ImageView
        android:id="@+id/color_indicator"
        android:layout_width="@dimen/circle_diameter"
        android:layout_height="@dimen/circle_diameter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:paddingEnd="@dimen/padding_regular"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/padding_regular"
        android:paddingStart="0dp" />

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/color_indicator"
        android:layout_toLeftOf="@+id/ip"
        android:layout_toRightOf="@+id/color_indicator"
        android:layout_toStartOf="@+id/ip"
        android:textSize="@dimen/text_header" />

    <TextView
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>